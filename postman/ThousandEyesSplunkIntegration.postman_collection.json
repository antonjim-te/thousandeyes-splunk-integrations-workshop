			},
			"response": []
		},
		{
			"name": "Create ThousandEyes Page Load Test",
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": {
						"token": "{{ThousandEyes_token}}"
					}
				},
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "Authorization",
						"value": "Bearer $BEARER_TOKEN"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"interval\": 60,\n    \"agents\": [\n        {\n            \"agentId\": {{ThousandEyes_agent_id}}\n        }\n    ],\n    \"testName\": \"Test Workshop\",\n    \"url\": \"www.google.com\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": "https://api.thousandeyes.com/v7/tests/http-server"
			},
			"response": []
		},
		{
			"name": "Create Streaming - Splunk Enterprise",
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": {
						"token": "{{ThousandEyes_token}}"
					}
				},
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{BEARER}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"type\": \"splunk-hec\",\n    \"testMatch\": [\n        {\n            \"id\": \"{{ThousandEyes_test_id}}\",\n            \"domain\": \"cea\"\n        }\n    ],\n    \"exporterConfig\": {\n        \"splunkHec\":{\n            \"token\": \"{{Splunk_Enterprise_HEC_token}}\"\n        }\n    },\n    \"endpointType\": \"http\",\n    \"streamEndpointUrl\": \"https://splunk.pseudoco.net:8088/services/collector/event\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": "https://api.thousandeyes.com/v7/stream"
			},
			"response": []
		},
		{
			"name": "Create metrics stream - Splunk Observability",
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": {
						"token": "{{ThousandEyes_token}}"
					}
				},
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{BEARER}}"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"type\": \"openTelemetry\",\n    \"signal\": \"metric\",\n    \"testMatch\": [\n        {\n            \"id\": \"{{ThousandEyes_test_id}}\",\n            \"domain\": \"cea\"\n        }\n    ],\n    \"endpointType\": \"http\",\n    \"streamEndpointUrl\": \"https://ingest.us1.signalfx.com:443/v2/datapoint/otlp\",\n    \"customHeaders\": {\n        \"X-SF-Token\": \"{{Splunk_Observability_access_token}}\",\n        \"Content-Type\": \"application/x-protobuf\"\n    }\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": "https://api.thousandeyes.com/v7/stream"
			},
			"response": []
		},
